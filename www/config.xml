<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lineinteractive.sika" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SIKA - Loyalty Reward</name>
    <description>
        A Loyalty Reward solution
    </description>
    <author email="zakaria@line.ma" href="http://cordova.io">
       LINE INTERACTIVE
    </author>
    <content src="login.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="backgroundColor" value="0x00000000" />
    <preference name="StatusBarBackgroundColor" value="546e8d" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="android-build-tool" value="gradle" />
    <platform name="android">
        <icon density="ldpi" src="icons/android-icon-192x192.png" />
        <icon density="mdpi" src="icons/android-icon-192x192.png" />
        <icon density="hdpi" src="icons/android-icon-192x192.png" />
        <icon density="xhdpi" src="icons/android-icon-192x192.png" />
        <icon density="xxhdpi" src="icons/android-icon-72x72.png" />
        <icon density="xxxhdpi" src="icons/android-icon-72x72.png" />
        <splash density="land-ldpi" src="icons/android-icon-192x192.png" />
        <splash density="land-mdpi" src="icons/android-icon-192x192.png" />
        <splash density="land-hdpi" src="icons/android-icon-192x192.png" />
        <splash density="land-xhdpi" src="icons/android-icon-192x192.png" />
        <splash density="land-xxhdpi" src="icons/android-icon-192x192.png" />
        <splash density="land-xxxhdpi" src="icons/android-icon-192x192.png" />
        <splash density="port-ldpi" src="icons/android-icon-192x192.png" />
        <splash density="port-mdpi" src="icons/android-icon-192x192.png" />
        <splash density="port-hdpi" src="icons/android-icon-192x192.png" />
        <splash density="port-xhdpi" src="icons/android-icon-192x192.png" />
        <splash density="port-xxhdpi" src="icons/android-icon-192x192.png" />
        <splash density="port-xxxhdpi" src="icons/android-icon-192x192.png" />
    </platform>
    <platform name="ios">
        <icon height="180" platform="ios" src="icons/apple-icon-180x180.png" width="180" />
        <icon height="152" platform="ios" src="icons/apple-icon-152x152.png" width="152" />
        <icon height="144" platform="ios" src="icons/apple-icon-144x144.png" width="144" />
        <icon height="120" platform="ios" src="icons/apple-icon-120x120.png" width="120" />
        <icon height="114" platform="ios" src="icons/apple-icon-114x114.png" width="114" />
        <icon height="76" platform="ios" src="icons/apple-icon-76x76.png" width="76" />
        <icon height="72" platform="ios" src="icons/apple-icon-72x72.png" width="72" />
        <icon height="60" platform="ios" src="icons/apple-icon.png" width="60" />
        <icon height="57" platform="ios" src="icons/apple-icon-57x57.png" width="57" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-targetSdkVersion" value="22" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <plugin name="phonegap-plugin-barcodescanner" source="npm" spec="8.0.0" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>To scan barcodes</string>
    </edit-config>
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <engine name="ios" spec="^4.5.5" />
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
</widget>
